<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="/socket.io/socket.io.js"></script>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat con socket.io</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
      integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn"
      crossorigin="anonymous"
    />
    <link
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./chat.css" />
  </head>
  <body>
    <div class="container">
      <div class="row clearfix">
        <div class="col-lg-12">
          <div class="card chat-app">
            <div id="plist" class="people-list">
              <ul
                class="list-unstyled chat-list mt-2 mb-0"
                id="usersContainer"
              ></ul>
            </div>
            <div class="chat">
              <div class="chat-header clearfix">
                <a href="">Chat</a>
              </div>
              <div class="chat-history">
                <ul class="m-b-0" id="messagesContainer">
                  <% if (logs) { logs.forEach(function(log) { %>
                  <li>
                    <p><%= log.usuario%> <%= log.fecha%> : <%= log.mensaje%></p>
                  </li>
                  <% })}; %>
                </ul>
              </div>
              <div class="chat-message clearfix">
                <span
                  id="serverNotification"
                  style="color: gray; font-size: 13px"
                ></span>
                <div class="input-group mb-0">
                  <input
                    id="messageInput"
                    type="text"
                    class="form-control"
                    placeholder="Enter text here..."
                  />
                  <div class="input-group-prepend">
                    <button id="sendMessage" class="input-group-text">
                      <i class="fa fa-send"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.10.3/qs.min.js"></script>
    <script src="./chat.js"></script>
  </body>
</html>
